{
  "name": "mypascal",
  "displayName": "My Pascal",
  "publisher": "evgsil",
  "description": "Useful Pascal/Delphi tools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mypascal.switchPasDfm",
    "onCommand:mypascal.runDelphi"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mypascal.switchPasDfm",
        "title": "Switch Between *.pas and *.dfm files"
      },
      {
        "command": "mypascal.runDelphi",
        "title": "Run Delphi"
      }
    ],
    "keybindings": [
      {
        "key": "pausebreak",
        "command": "mypascal.switchPasDfm",
        "when": "editorTextFocus"
      }
    ],
    "languages": [
      {
        "id": "dfm",
        "aliases": [
          "Delphi Forms",
          "delphi forms"
        ],
        "extensions": [
          ".dfm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dfm",
        "scopeName": "source.dfm",
        "path": "./syntaxes/dfm.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "objectpascal"
      }
    ],
    "configuration": {
      "title": "My Pascal",
      "properties": {
        "mypascal.pathToDelphiBin": {
          "type": "string",
          "title": "Path to delphi\\bin folder",
          "default": "C:\\Program Files (x86)\\Embarcadero\\Studio\\15.0\\bin\\"
        },
        "mypascal.pathToDpr": {
          "type": "string",
          "default": "",
          "title": "Path to *.dpr",
          "description": "Path to delphi project *.dpr file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "@types/ini": "^1.3.30"
  }
}
